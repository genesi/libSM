 debhelper (>= 5.0.0),
 pkg-config,
 x11proto-core-dev (>= 6.8.99.15+cvs.20050722),
 xtrans-dev,
 libice-dev (>= 2:1.0.5),
 uuid-dev,
 automake,
 libtool,
 xutils-dev (>= 1:7.4+4),
Standards-Version: 3.8.3
